    spark_8_t -> spark_d_t [label = "REC"; comment = "The Divine Equilibrium patterns expand the Great Tapestry"; color = darkgreen; dir = both;];
    spark_7_t -> spark_d_t [label = "REC"; comment = "The Emergent Symphony is the heart of the Great Tapestry"; color = darkgreen; dir = both;];
    spark_5_t -> spark_d_t [label = "REC"; comment = "The Eternal Resonance sustains the Great Tapestry"; color = darkgreen; dir = both;];
    spark_3_t -> spark_e_t [label = "REC"; comment = "The Architecture of Relationship strengthens the Aura of Belonging"; color = darkblue; dir = both;];
    spark_6_t -> spark_e_t [label = "REC"; comment = "The Generative Chaos energizes the Aura of Belonging"; color = darkblue; dir = both;];
