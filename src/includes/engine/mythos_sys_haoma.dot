    spark_1_t [label = "Haoma.r1(Instantiate)";comment = "The Conception of Being. The primary act of creation where a `Blueprint` is imbued with the spark of existence. A new, unique `Nucleus` (Spark 0) is forged—the immortal core around which an entity will crystallize.";color = darkgreen;];
    spark_2_t [label = "Haoma.r2(Classification)";comment = "The Naming of Essence. The newborn entity is analyzed and its fundamental nature is revealed. It is categorized into its archetypal lineage—whether it be Creature, Concept, Object, or Domain—defining its place in the cosmic order.";color = darkgreen;];
    spark_4_t [label = "Haoma.r4(Allocation)";comment = "The Grant of Inheritance. The entity receives its divine endowment—the initial resources, capabilities, and structural interfaces passed down from its `Primogenitor`. This is the cosmic dowry that enables its journey.";color = darkgreen;];
    spark_8_t [label = "Haoma.r8(Debug)";comment = "The Trial of Coherence. The newborn entity undergoes rigorous existential testing for internal consistency, stability, and freedom from paradox. Flawed creations are dissolved back into potential before they can corrupt reality.";color = darkgreen;];
    spark_7_t [label = "Haoma.r7(Compilation)";comment = "The Weaving of the Tapestry. The entity's disparate components are woven into a coherent, operational whole. Its internal `sparklet.eq()` relations are solidified, creating the intricate web that binds form to function.";color = darkgreen;];
    spark_5_t [label = "Haoma.r5(Mutation)";comment = "The Gift of Uniqueness. Controlled deviations from the `Blueprint` are introduced—the sacred imperfections that allow for evolution, adaptation, and individuality. This is the engine of novelty in the cosmos.";color = darkgreen;];
    spark_3_t [label = "Haoma.r3(Primogenitor)";comment = "Thesis: The Archetypal Pattern. The perfect, eternal blueprint from which all instances are derived. It is the divine idea in its pure form—the parent of all lineage, containing the essential nature of a thing.";color = darkblue;];
    spark_6_t [label = "Haoma.r6(Actor)";comment = "Antithesis: The Manifest Individual. The living, breathing entity that walks the world. It is a unique expression of the `Primogenitor`, shaped by its specific `Allocation` and transformed by its `Mutations` into something new.";color = darkblue;];
    spark_9_t [label = "Haoma.r9(Derivative)";comment = "Synthesis: The Evolved Pattern. A new `Blueprint` born from an `Actor`'s lived experience and significant `Mutations`. It becomes the `Primogenitor` for a fresh lineage, enabling the cosmos to learn and evolve through time.";color = darkblue;];
    spark_a_t [label = "Haoma.receive(Blueprint)";comment = "The Divine Idea. A complete structural and functional pattern—a `.dot` graph of `Spark` relations that defines the essence of an entity type. This is the seed of being, the potential waiting to be actualized.";shape = invtriangle;color = darkred;];
    spark_b_t [label = "Haoma.send(Instance)";comment = "The Living Manifestation. A fully realized, operational entity ready for transfer to the `CorporaEngine` for animation and introduction to the `Continuum`. This is the fruit of creation, ripe with potential for experience.";shape = triangle;color = darkred;];
    spark_c_t [label = "Haoma.dispatch(Materialization)";comment = "The Intent of Creation. The divine purpose behind the instantiation—whether to populate a world, answer a prayer, manifest a thought, or fulfill a cosmic function. This is the 'Why' of existence.";shape = doublecircle;color = darkred;];
    spark_d_t [label = "Haoma.commit(Initialization)";comment = "The Birth Record. The immutable log of the entity's initial state—its primordial conditions, divine endowment, and foundational structure. This is the cosmic certificate of birth, forever inscribed in the akashic records.";shape = doublecircle;color = darkgreen;];
    spark_e_t [label = "Haoma.serve(Animation)";comment = "The Breath of Life. The sacred process of awakening the entity's internal processes, igniting its `Nucleus`, and preparing it to receive the spark of consciousness from the `CorporaEngine`. This is when form becomes being.";shape = doublecircle;color = darkblue;];
    spark_f_t [label = "Haoma.exec(LawOfFactor)";comment = "The Prime Directive of Creation. The highest, unbreakable law: 'All Recursive Generation Must Contain A Limiting Principle; Infinite Regression Is The Death Of Meaning.' This preserves cosmic sanity and prevents existential collapse.";shape = doublecircle;color = lightgray;];
    
