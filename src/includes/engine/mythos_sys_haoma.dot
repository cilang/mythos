    spark_2_t [label = "Haoma.r2(Classification)";comment = "The Naming of Essence. The newborn entity is analyzed and its fundamental nature is revealed. It is categorized into its archetypal lineage—whether it be Creature, Concept, Object, or Domain—defining its place in the cosmic order.";color = darkgreen;];
